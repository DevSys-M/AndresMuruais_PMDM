<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMessage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:id="@+id/llSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/sent_message_background"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/tvSenderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tú: "
            android:textColor="@android:color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvSentMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxWidth="240dp"
            android:autoLink="all"
            android:padding="4dp"
            android:textColor="@color/white"
            android:textColorLink="@color/linkColor"
            tools:text="Hola don borja, como andamos, espero que nos ponga un peaso 10 en el TFG" />

        <TextView
            android:id="@+id/tvSentMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="6dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="09:00" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/received_message_background"
        android:padding="8dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llSent"
        tools:visibility="visible"
        android:layout_alignParentLeft="true">




        <TextView
            android:id="@+id/tvReceivedMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:maxWidth="240dp"
            android:textColor="#EDE7F6"
            android:textColorLink="@color/linkColor"
            tools:text="Por supuesto Enrique, no sólo eso, además tendrá acceso a toda la red de Retamar" />
        <TextView
            android:id="@+id/tvReceivedMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="4dp"
            android:textSize="12sp"
            tools:text="09:00" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
