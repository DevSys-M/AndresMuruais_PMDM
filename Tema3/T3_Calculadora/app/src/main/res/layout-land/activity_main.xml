<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/texto_numeros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="@dimen/padding_texto_land"
        android:textSize="@dimen/texto_normal_land" />

    <EditText
        android:id="@+id/edit_numeros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="end"
        android:padding="@dimen/padding_texto_land"
        android:text="0"
        android:textSize="@dimen/texto_normal_land" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boton_borrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gris_dark"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="@dimen/padding_texto_land"
            android:text="DEL"
            android:textSize="@dimen/padding_texto_land" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boton_siete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:backgroundTint="@color/gris_dark"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="@dimen/padding_texto_land"
            android:text="7"
            android:textSize="@dimen/texto_botones_land" />

        <Button
            android:id="@+id/boton_ocho"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:backgroundTint="@color/gris_dark"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="@dimen/padding_texto_land"
            android:text="8"
            android:textSize="@dimen/texto_botones_land" />

        <Button
            android:id="@+id/boton_nueve"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/gris_dark"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="@dimen/padding_texto_land"
            android:text="9"
            android:textSize="@dimen/texto_botones_land" />

        <Button
            android:id="@+id/boton_div"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:backgroundTint="@color/gris_light"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="@dimen/padding_texto_land"
            android:text="/"
            android:textSize="@dimen/texto_botones_land" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boton_cuatro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:backgroundTint="@color/gris_dark"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="@dimen/padding_texto_land"
            android:text="4"
            android:textSize="@dimen/texto_botones_land" />

        <Button
            android:id="@+id/boton_cinco"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:backgroundTint="@color/gris_dark"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="@dimen/padding_texto_land"
            android:text="5"
            android:textSize="@dimen/texto_botones_land" />

        <Button
            android:id="@+id/boton_seis"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/gris_dark"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="@dimen/padding_texto_land"
            android:text="6"
            android:textSize="@dimen/texto_botones_land" />

        <Button
            android:id="@+id/boton_por"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:backgroundTint="@color/gris_light"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="@dimen/padding_texto_land"
            android:text="*"
            android:textSize="@dimen/texto_botones_land" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boton_uno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:backgroundTint="@color/gris_dark"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="@dimen/padding_texto_land"
            android:text="1"
            android:textSize="@dimen/texto_botones_land" />

        <Button
            android:id="@+id/boton_dos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:backgroundTint="@color/gris_dark"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="@dimen/padding_texto_land"
            android:text="2"
            android:textSize="@dimen/texto_botones_land" />

        <Button
            android:id="@+id/boton_tres"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/gris_dark"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="@dimen/padding_texto_land"
            android:text="3"
            android:textSize="@dimen/texto_botones_land" />

        <Button
            android:id="@+id/boton_menos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:backgroundTint="@color/gris_light"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="@dimen/padding_texto_land"
            android:text="-"
            android:textSize="@dimen/texto_botones_land" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boton_punto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:backgroundTint="@color/gris_dark"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="@dimen/padding_texto_land"
            android:text="."
            android:textSize="@dimen/texto_botones_land" />

        <Button
            android:id="@+id/boton_cero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:backgroundTint="@color/gris_dark"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="@dimen/padding_texto_land"
            android:text="0"
            android:textSize="@dimen/texto_botones_land" />

        <Button
            android:id="@+id/boton_igual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:backgroundTint="@color/gris_dark"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="@dimen/padding_texto_land"
            android:text="="
            android:textSize="@dimen/texto_botones_land" />

        <Button
            android:id="@+id/boton_mas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:backgroundTint="@color/gris_light"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="@dimen/padding_texto_land"
            android:text="+"
            android:textSize="@dimen/texto_botones_land" />

    </LinearLayout>
</LinearLayout>
